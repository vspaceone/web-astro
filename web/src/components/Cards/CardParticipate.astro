---
import Card from "@/components/Card/Card.astro";
export type Props = {
  title: string;
};

const { title } = Astro.props;
---

<Card padding={false}>
  <div class="flex flex-col bg-primary rounded-t-card p-card">
    <div class="size-12 mb-2 text-neutral">
      <slot name="icon" />
    </div>
    <h3 class="text-neutral">{title}</h3>
  </div>
  <div class="p-card">
    <slot name="content" />
  </div>
</Card>
